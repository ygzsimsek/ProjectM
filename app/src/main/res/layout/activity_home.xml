<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <FrameLayout
        android:id="@+id/layout_frame_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:visibility="gone"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:theme="@style/BottomNavTheme"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/bpBackground"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:theme="@style/BottomNavTheme"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/bpBackground"
        android:orientation="horizontal">

        <ImageButton
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/btn_nav_tuner"
            android:layout_width="48dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_guitar_pick_outline_white" />

        <ImageButton
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/btn_nav_metro"
            android:layout_width="48dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_metronome_tick_white" />

        <ImageButton
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/btn_nav_settings"
            android:layout_width="48dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_settings_outline_white" />
    </LinearLayout>

</RelativeLayout>